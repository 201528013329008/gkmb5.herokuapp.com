<%= form_for [@cat, @topic],:html => { :class => 'form-horizontal', :role => "form" } do |f| %>
    <%= render 'partials/form_errors', :obj => @topic, :name => 'topic' %>
    <%#= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="form-group">
        <%= f.label :title, :class => "col-lg-2 col-md-2 col-sm-2 control-label" %>
        <div class="col-lg-10 col-md-10 col-sm-10">
            <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
        </div>
    </div>
    <div class="form-group">
      <%= f.file_field :image , :class => "col-lg-2 col-md-2 col-sm-2 control-label"%>
    </div>
    <div class="form-group">
        <%= f.label :body, :class => "col-lg-2 col-md-2 col-sm-2 control-label" %>

        <div class="col-lg-10 col-md-10 col-sm-10">
            <%= f.text_area :body, :class => "form-control", :placeholder => "Body" %>
        </div>

    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-lg-10 col-md-10 col-sm-10">
            <% if ['new', 'create'].include? params[:action] %>
                <button type="submit" class="btn btn-primary">创建话题</button>
            <% elsif ['edit', 'update'].include? params[:action] %>
                <button type="submit" class="btn btn-primary">编辑话题</button>
            <% end %>
            <%= link_to "取消", :back, :class => "btn btn-default" %>
        </div>
    </div>
<% end %>
