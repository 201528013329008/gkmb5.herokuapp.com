<div class="actions-block clearfix">
    <div class="pull-left" style="margin-bottom: 20px">
        <%= link_to '发帖', [:new, @cat, @topic, :post], :class => 'btn btn-success' %>
        <% if @is_owner || @is_admin %>
            <%= link_to '编辑子话题', [:edit, @cat, @topic], :class => 'btn btn-default' %>
        <% end %>
        <% if @is_admin %>
            <%= link_to "删除子话题", [@cat, @topic], method: :delete, :data => { :confirm => "Are you sure?" }, :class => 'btn btn-danger' %>
        <% end %>
    </div>
    <%= render 'partials/pagination', :all => @all_posts, :some => @posts, :name => :post, :classes => 'pull-right',:classes => 'clearfix'  %>
</div>
